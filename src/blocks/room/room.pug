            div.room-gallery-icon-position
                i.material-icons.room-gallery-icon.trigger-img-1.active
                i.material-icons.room-gallery-icon.trigger-img-2
                i.material-icons.room-gallery-icon.trigger-img-3
                i.material-icons.room-gallery-icon.trigger-img-4
